{
    "extends": ["tslint-microsoft-contrib/recommended", "tslint-config-prettier"],
    "rules": {
      "quotemark": [
        true,
        "single",
        "avoid-escape",
        "avoid-template",
        "jsx-double"
      ],
      "mocha-no-side-effect-code": false,
      "missing-jsdoc": false,
      "no-relative-imports": false,
      "no-suspicious-comment": false,
      "export-name": false,
      "promise-function-async": false,
      "max-func-body-length": false,
      "no-backbone-get-set-outside-model": false,
      "no-void-expression": false,
      "no-redundant-jsdoc": false,
      "no-unused": false,
      "no-unnecessary-local-variable": false,
      "prefer-type-cast": false,
      "prefer-array-literal": [true, { "allow-type-parameters": true }],
      "react-a11y-anchors": false,
      "react-a11y-titles": false,
      "react-this-binding-issue": false,
      "max-line-length": [true, 100],
      "typedef": [
        true,
        "arrow-parameter",
        "call-signature",
        "member-variable-declaration",
        "parameter",
        "property-declaration"
      ],
      "use-simple-attributes": false,
      "react-no-dangerous-html": [
        true,
        [
          {
            "file": "components/NewRelicSnippet.tsx",
            "method": "<unknown>",
            "comment": "Approved 01-27-2020"
          }
        ]
      ]
    }
  }
  